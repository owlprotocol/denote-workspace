{
  "name": "@denotecapital/token-sdk",
  "version": "0.1.0",
  "keywords": [],
  "private": true,
  "type": "module",
  "homepage": "https://github.com/owlprotocol/token-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/token-sdk.git"
  },
  "copyright": "Copyright 2025 Denote Capital",
  "license": "MIT",
  "author": {
    "name": "Oscar Baracos",
    "email": "oscar@denotecapital.com",
    "url": "https://github.com/oscbacon"
  },
  "files": [
    "_cjs/*",
    "_esm/*",
    "_types/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "main": "./_cjs/lib/index.cjs",
  "module": "./_esm/lib/index.mjs",
  "types": "./_types/index.d.ts",
  "exports": {
    ".": {
      "types": "./_types/index.d.ts",
      "require": "./_cjs/lib/index.js",
      "import": "./_esm/lib/index.js"
    }
  },
  "scripts": {
    "build": "npm-run-all -p tsc esbuild",
    "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
    "clean": "rimraf _cjs _esm _types .turbo",
    "depcheck": "depcheck",
    "esbuild": "node esbuild.config.mjs",
    "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "madge": "madge src/index.ts -c",
    "test": "pnpm run test:ci",
    "test:ci": "vitest --run",
    "test:watch": "vitest",
    "tsc": "tsc",
    "tsc:trace": "tsc --generateTrace lib/trace && analyze-trace lib/trace",
    "tsc:watch": "tsc -w",
    "upload-dar": "tsx src/uploadDars.ts",
    "get:minimal-token-id": "daml damlc inspect ../minimal-token/.daml/dist/minimal-token-0.1.0.dar | head -1 | awk '{print $2}'"
  },
  "devDependencies": {
    "@canton-network/core-ledger-client": "^0.17.0",
    "@types/node": "^22.13.10",
    "@typescript/analyze-trace": "^0.10.1",
    "@veraswap/esbuild-config": "latest",
    "@veraswap/eslint-config": "latest",
    "@veraswap/tsconfig": "latest",
    "depcheck": "^1.4.7",
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "5.8.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.8"
  },
  "funding": "https://denote.capital",
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@canton-network/wallet-sdk": "^0.16.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^13.0.0"
  }
}
